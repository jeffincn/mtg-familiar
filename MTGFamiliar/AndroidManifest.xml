<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gelakinetic.mtgfam" android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<supports-screens android:resizeable="true"
		android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name="com.gelakinetic.mtgfam.search" android:label="@string/app_name"
			android:screenOrientation="portrait" />

		<activity android:name="com.gelakinetic.mtgfam.resultlist"
			android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name="com.gelakinetic.mtgfam.cardview" android:label="@string/app_name"
			android:screenOrientation="portrait" />
		<activity android:name="com.gelakinetic.mtgfam.main" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.gelakinetic.mtgfam.rng" android:label="@string/app_name"
			android:screenOrientation="portrait" />

		<activity android:name="com.gelakinetic.mtgfam.counter" android:label="@string/app_name"
			android:screenOrientation="portrait" />

		<activity android:name="com.gelakinetic.mtgfam.PreferencesActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name="com.gelakinetic.mtgfam.DeckManagement"
			android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name="com.gelakinetic.mtgfam.DeckView"
			android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name="com.gelakinetic.mtgfam.ManaPoolActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" />
	</application>
</manifest>
