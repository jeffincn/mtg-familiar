<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gelakinetic.mtgfam" android:versionCode="3"
	android:versionName="1.1.1" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<supports-screens android:resizeable="true"
		android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name="com.gelakinetic.mtgfam.SearchActivity"
			android:label="@string/app_name" />

		<activity android:name="com.gelakinetic.mtgfam.ResultListActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.CardViewActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.MainActivity"
			android:label="@string/app_name" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.DiceActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.LifeCounterActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.PreferencesActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<activity android:name="com.gelakinetic.mtgfam.ManaPoolActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>
		
		<activity android:name="com.gelakinetic.mtgfam.RandomCardActivity"
			android:label="@string/app_name">
			<!-- enable the search dialog to send searches to SearchableActivity -->
			<meta-data android:name="android.app.default_searchable"
				android:value=".ResultListActivity" />
		</activity>

		<!-- <activity android:name="com.gelakinetic.mtgfam.DeckManagementActivity" 
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" 
			/> <activity android:name="com.gelakinetic.mtgfam.DeckViewActivity" android:label="@string/app_name" 
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" 
			/> -->
	</application>
</manifest>
