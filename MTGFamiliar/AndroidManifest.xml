<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gelakinetic.mtgfam" android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<supports-screens android:resizeable="true"
		android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name=".SearchActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>

		<activity android:name=".ResultListActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name=".CardViewActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name=".MainActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".DiceActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>

		<activity android:name=".LifeCounterActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>

		<activity android:name="com.gelakinetic.mtgfam.PreferencesActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name=".DeckManagementActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name=".DeckViewActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.gelakinetic.mtgfam.ManaPoolActivity"
			android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"/>
	</application>
</manifest>
