<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nplayer_col"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#FFAAAAAA" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/player_name"
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal"
            android:text="Player 1" />

        <LinearLayout
            android:id="@+id/middle_layout"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" android:layout_width="fill_parent" android:weightSum="1" android:baselineAligned="false">
            <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout1" android:layout_weight=".5" android:layout_width="0dp" android:orientation="vertical">
                <TextView android:gravity="center" android:textSize="72dp" android:paddingBottom="10dp" android:paddingTop="10dp" android:paddingRight="0dp" android:layout_height="fill_parent" android:text="@string/twenty_str" android:paddingLeft="0dp" style="@style/text" android:maxLines="1" android:id="@+id/player_readout" android:layout_marginLeft="-18dp" android:layout_marginRight="-18dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_height="fill_parent"
                android:background="@drawable/textview_backdrop"
                android:orientation="vertical" android:layout_width="0dp" android:layout_weight=".5">

                <ListView
                    android:id="@+id/player_history"
                    android:layout_height="wrap_content"
                    android:padding="1dp" android:layout_width="fill_parent" android:paddingLeft="36dp">
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            
            <Button
                android:id="@+id/player_minus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/minus_five"
                android:textSize="20sp"/>
    
            <Button
                android:id="@+id/player_minus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/minus_one"
                android:textSize="20sp" />
            
            <Button
                android:id="@+id/player_plus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/plus_one"
                android:textSize="20sp" />

            <Button
                android:id="@+id/player_plus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/plus_five"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>