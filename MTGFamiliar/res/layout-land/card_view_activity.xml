<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/name"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:text="Vorinclex, Voice of Hunger" />

                <TextView
                    android:id="@+id/cost"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:gravity="right"
                    android:text="6GG" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14sp" >

                <TextView
                    android:id="@+id/type"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:text="Legendary Creature â€” Human Soldier"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/set"
                style="@style/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dip"
                android:layout_marginTop="-3sp"
                android:gravity="right"
                android:text="MOR"
                android:textColor="@color/mythic" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10sp"
                android:saveEnabled="true" >

                <TextView
                    android:id="@+id/ability"
                    style="@style/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="{T}: Search your library for a legendary card, reveal that card, and put it into your hand. Then shuffle your library." />

                <TextView
                    android:id="@+id/flavor"
                    style="@style/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="5sp"
                    android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet flavor text."
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/artist"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:layout_marginBottom="0dip" android:layout_marginLeft="3dip" android:layout_marginRight="3dip" android:layout_marginTop="3dip" android:text="Zoltan Boros &amp; Gabor Szikzsai &amp; Blah Blah &amp; Foo Foo &amp; Sneef Sneef"/>

                <TextView
                    android:id="@+id/pt"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:text="*/1+*" android:layout_marginBottom="0dip" android:layout_marginLeft="3dip" android:layout_marginRight="3dip" android:layout_marginTop="3dip" android:layout_height="fill_parent" android:gravity="bottom|right"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/cardpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/loading" />

            <Button
                android:id="@+id/transformbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/transform"
                android:textSize="22dip" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/randomLeft"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/randomleft"
                    android:textSize="22dip" />

                <Button
                    android:id="@+id/randomRight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/randomright"
                    android:textSize="22dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>