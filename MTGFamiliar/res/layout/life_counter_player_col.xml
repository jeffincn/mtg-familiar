<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:paddingTop="5dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:orientation="horizontal" >

    <!-- Health and +/- buttons -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <!-- +1/+5 buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/player_plus1"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:text="+1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/player_plus5"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:text="+5"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- -1/-5 buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/player_minus1"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:text="-1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/player_minus5"
                android:layout_width="50dip"
                android:layout_height="fill_parent"
                android:text="-5"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Health display -->

        <TextView
            android:id="@+id/player_readout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20"
            android:textSize="80sp" />
    </LinearLayout>
    <!-- History -->

    <LinearLayout
        android:layout_width="139dp"
        android:layout_height="190dp"
        android:background="@drawable/textview_backdrop"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/player_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="1dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>