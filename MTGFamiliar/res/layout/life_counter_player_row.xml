<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" android:weightSum="1">

    <!-- Health and +/- buttons -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp" android:gravity="center" android:layout_weight=".6">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            style="@style/text" />

        <!-- +1/+5 buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/player_plus1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/player_plus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+5"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- -1/-5 buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/player_minus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/player_minus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-5"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Health display -->

        <TextView
            android:id="@+id/player_readout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/text"
            android:text="20"
            android:textSize="63dp" />
    </LinearLayout>
    <!-- History -->

    <LinearLayout
        android:background="@drawable/textview_backdrop"
        android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight=".4">

        <ListView
            android:id="@+id/player_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="1dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>