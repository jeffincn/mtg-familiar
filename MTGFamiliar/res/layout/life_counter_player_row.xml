<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nplayer_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="0dp"
    android:weightSum="1" >

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FFAAAAAA"
		/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" 
        android:paddingTop="2dp"> <!-- Health and +/- buttons -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/player_name"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1" />

            <!-- +1/+5 buttons -->


            <!-- android:paddingTop="-5dp" -->

            <TextView
                android:id="@+id/player_readout"
                style="@style/text"
                android:layout_width="fill_parent"
                android:layout_marginBottom="-8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="20"
                android:textSize="63dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/player_plus1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/player_plus5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+5"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- -1/-5 buttons -->


            <!-- android:layout_marginBottom="-8dp" -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/player_minus1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/player_minus5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-5"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Health display -->

        </LinearLayout>
        <!-- History -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:background="@drawable/textview_backdrop"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/player_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>