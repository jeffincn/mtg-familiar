<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:orientation="vertical">
	<LinearLayout android:id="@+id/linearLayout2" android:layout_width="fill_parent"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
		android:layout_marginTop="5dip" android:layout_marginBottom="10dip">
		<ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:src="@drawable/icon"/>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:text="@string/app_name"
			android:gravity="center" android:id="@+id/title" android:textSize="40dip"/>
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="0dp" android:layout_weight="5">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:gravity="center">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/cardsearch"
				android:gravity="center" android:orientation="horizontal">
				<ImageView android:layout_width="0dp"
					android:layout_height="wrap_content" android:src="@drawable/card_search_icon"
					android:scaleType="center" android:layout_weight="1"
					android:layout_marginTop="8dip" android:layout_marginBottom="8dip" />
				<TextView android:layout_width="0dp" android:text="@string/cardsearch"
					android:layout_height="wrap_content" android:textSize="30dip"
					android:layout_weight="3" style="@style/text"
					android:layout_marginLeft="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/lifecounter"
				android:gravity="center" android:orientation="horizontal">
				<ImageView android:layout_width="0dp"
					android:layout_height="wrap_content" android:src="@drawable/life_counter_icon"
					android:scaleType="center" android:layout_weight="1"
					android:layout_marginTop="8dip" android:layout_marginBottom="8dip" />
				<TextView android:layout_width="0dp" android:text="@string/lifecounter"
					android:layout_height="wrap_content" android:textSize="30dip"
					android:layout_weight="3" style="@style/text"
					android:layout_marginLeft="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/manapool"
				android:gravity="center" android:orientation="horizontal">
				<ImageView android:layout_width="0dp"
					android:layout_height="wrap_content" android:src="@drawable/mana_pool_icon"
					android:scaleType="center" android:layout_weight="1"
					android:layout_marginTop="8dip" android:layout_marginBottom="8dip" />
				<TextView android:layout_width="0dp" android:text="@string/manapool"
					android:layout_height="wrap_content" android:textSize="30dip"
					android:layout_weight="3" style="@style/text"
					android:layout_marginLeft="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/rng"
				android:gravity="center" android:orientation="horizontal">
				<ImageView android:layout_width="0dp"
					android:layout_height="wrap_content" android:src="@drawable/dice_icon"
					android:scaleType="center" android:layout_weight="1"
					android:layout_marginTop="8dip" android:layout_marginBottom="8dip" />
				<TextView android:layout_width="0dp" android:text="@string/random"
					android:layout_height="wrap_content" android:textSize="30dip"
					android:layout_weight="3" style="@style/text"
					android:layout_marginLeft="12dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/randomCard"
				android:gravity="center" android:orientation="horizontal">

				<ImageView
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="8dip"
				    android:layout_marginTop="8dip"
				    android:layout_weight="1"
				    android:scaleType="center"
				    android:src="@drawable/mojhosto_icon" />

				<TextView
				    style="@style/text"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="12dip"
				    android:layout_weight="3"
				    android:text="@string/mojhosto_label"
				    android:textSize="30dip" />

			</LinearLayout>
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="30dip"
				android:layout_weight="1" android:id="@+id/deckmanager"
				android:text="@string/deckmanagement" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
