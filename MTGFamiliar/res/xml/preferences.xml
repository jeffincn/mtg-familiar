<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Automatic Updates" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autoupdate"
            android:summary="@string/automaticupdatesummary"
            android:title="@string/automaticupdatetitle" />

        <ListPreference
            android:entries="@array/updatefrequencydays"
            android:entryValues="@array/updatefrequencydaysvalues"
            android:key="updatefrequency"
            android:summary="@string/updatefrequencysummary"
            android:title="@string/updatefrequencytitle" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/cardviewtitle" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="picFirst"
            android:summary="@string/picfirstsummary"
            android:title="@string/picfirsttitle" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Dice" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="d2AsCoin"
            android:title="@string/d2title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/lifetitle" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="wakelock"
            android:summary="@string/wakelocksummary"
            android:title="@string/wakelocktitle" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/resultlisttitle" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="setPref"
            android:title="@string/setPreftitle" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="manacostPref"
            android:title="@string/manacostPreftitle" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="typePref"
            android:title="@string/typePreftitle" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="abilityPref"
            android:title="@string/abilityPreftitle" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="ptPref"
            android:title="@string/ptPreftitle" />
    </PreferenceCategory>
