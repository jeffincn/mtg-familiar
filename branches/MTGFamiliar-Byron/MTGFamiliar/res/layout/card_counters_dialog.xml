<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardcounters_dialog"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:weightSum="10"
	android:orientation="horizontal">

	<RadioGroup
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="9">
	    <RadioButton
	        android:id="@+id/card_counters_customradio"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    <RadioButton
	        android:id="@+id/card_counters_predefined"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:checked="true" />
	</RadioGroup>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
	    <EditText
	    	android:id="@+id/card_counters_customedit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/card_counters_custom" />
	    <Spinner
	        android:id="@+id/card_counters_spinner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/card_counters_spinner" />
	</LinearLayout>
</LinearLayout>