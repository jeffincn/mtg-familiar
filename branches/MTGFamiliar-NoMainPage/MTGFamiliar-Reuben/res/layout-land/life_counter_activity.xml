<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <!-- Player 1 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- History and health -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:paddingLeft="2dp" >

            <!-- History -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/textview_backdrop"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/p1_history"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="1dp" />
            </LinearLayout>
            <!-- Health display -->

            <TextView
                android:id="@+id/p1_readout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="25sp"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="true"
                android:text="20"
                android:textSize="80sp" />
        </LinearLayout>
        <!-- Buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android_orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp" >

            <!-- +/- 1 Buttons -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/p1_plus1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+1"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/p1_minus1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="-1"
                    android:textSize="25sp" />
            </LinearLayout>
            <!-- +/- 5 Buttons -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/p1_plus5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+5"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/p1_minus5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="-5"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#FFAAAAAA" />
    <!-- Command bar: reset, poison, etc. -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/poison_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/poison_button" />

        <ImageView
            android:id="@+id/life_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/life_button" />

        <ImageView
            android:id="@+id/die_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/die_button" />

        <ImageView
            android:id="@+id/pool_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/pool_button" />

        <ImageView
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/reset_button" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#FFAAAAAA" />
    <!-- Player 2 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- History and health -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:paddingLeft="2dp" >

            <!-- Health display -->

            <TextView
                android:id="@+id/p2_readout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="25sp"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="true"
                android:text="20"
                android:textSize="80sp" />
            <!-- History -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/textview_backdrop"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/p2_history"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="1dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android_orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp" >

            <!-- +/- 1 Buttons -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/p2_plus1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+1"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/p2_minus1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="-1"
                    android:textSize="25sp" />
            </LinearLayout>
            <!-- +/- 5 Buttons -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/p2_plus5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+5"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/p2_minus5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="-5"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>