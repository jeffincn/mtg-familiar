<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical"
		android:gravity="center" android:layout_height="fill_parent">
		<!-- white --> <!-- blue -->
		<LinearLayout android:orientation="horizontal" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginTop="15sp">
			<Button android:id="@+id/white_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/w"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/white_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/white_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" android:layout_marginRight="5sp"/>
			<Button android:id="@+id/blue_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" android:layout_marginLeft="5sp"/>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/u"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/blue_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/blue_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" />
		</LinearLayout>
		<!-- black -->		<!-- red -->
		<LinearLayout android:orientation="horizontal" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
			<Button android:id="@+id/black_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/b"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/black_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/black_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" android:layout_marginRight="5sp"/>
			<Button android:id="@+id/red_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" android:layout_marginLeft="5sp"/>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/r"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/red_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/red_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" />
		</LinearLayout>
		<!-- green -->		<!-- colorless -->
		<LinearLayout android:orientation="horizontal" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
			<Button android:id="@+id/green_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/g"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/green_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/green_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" android:layout_marginRight="5sp"/>
			<Button android:id="@+id/colorless_minus"
				android:layout_width="60sp" android:layout_height="wrap_content"
				android:textSize="30sp" android:text="-" android:layout_marginLeft="5sp"/>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/x"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/colorless_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/colorless_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" />
		</LinearLayout>
		<!-- spell -->
		<LinearLayout android:orientation="horizontal" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
			<Button android:id="@+id/spell_minus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="-" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/spell"
				android:layout_marginLeft="20dip" android:layout_marginRight="10dip" />
			<TextView android:id="@+id/spell_readout"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="45sp" android:text="0" android:layout_marginLeft="10dip"
				android:layout_marginRight="20dip" style="@style/text" />
			<Button android:id="@+id/spell_plus" android:layout_width="60sp"
				android:layout_height="wrap_content" android:textSize="30sp"
				android:text="+" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
