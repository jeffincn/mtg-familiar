<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_margin="5dip" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true">
		<TextView style="@style/text" android:text="TextView"
			android:layout_height="wrap_content" android:id="@+id/cardcost"
			android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
			android:layout_marginTop="3dip" android:layout_marginBottom="2dip"
			android:gravity="right" android:layout_width="fill_parent" />
		<TextView android:layout_height="wrap_content" style="@style/text"
			android:id="@+id/cardset" android:text="Text"
			android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
			android:layout_marginTop="1dip" android:layout_marginBottom="3dip"
			android:gravity="right" android:layout_width="fill_parent" />
	</LinearLayout>
	<TextView android:layout_height="fill_parent" style="@style/text"
		android:gravity="center_vertical" android:id="@+id/cardname"
		android:layout_width="fill_parent" android:text="TextView"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_alignBottom="@+id/linearLayout1"
		android:layout_toLeftOf="@+id/linearLayout1"
		android:layout_marginLeft="3dip" />
</RelativeLayout>
