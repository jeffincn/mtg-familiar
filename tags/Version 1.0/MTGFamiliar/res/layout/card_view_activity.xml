<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/scrollView1">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView android:layout_height="wrap_content" android:text="Vorinclex, Voice of Hunger"
				style="@style/text" android:id="@+id/name" android:layout_weight="1"
				android:layout_width="fill_parent" android:layout_gravity="center"
				android:layout_margin="3dip" />
			<TextView android:layout_height="wrap_content" android:text="6GG"
				android:gravity="right" style="@style/text" android:id="@+id/cost"
				android:layout_width="wrap_content" android:layout_margin="3dip" />
		</LinearLayout>

		<ImageView android:src="@drawable/divider" android:id="@+id/imageView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_gravity="center" />
		<LinearLayout android:id="@+id/linearLayout3"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView android:layout_height="wrap_content"
				android:text="Legendary Creature â€” Human Soldier" style="@style/text"
				android:id="@+id/type" android:layout_weight="1"
				android:layout_width="fill_parent" android:layout_margin="3dip" />
			<TextView android:layout_height="wrap_content" android:text="MOR"
				android:gravity="right" style="@style/text" android:id="@+id/set"
				android:layout_width="wrap_content" android:textColor="@color/mythic"
				android:layout_margin="3dip" />
		</LinearLayout>
		<ImageView android:src="@drawable/divider" android:id="@+id/imageView2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_gravity="center" />
		<TextView
			android:text="{T}: Search your library for a legendary card, reveal that card, and put it into your hand. Then shuffle your library."
			style="@style/text" android:layout_width="fill_parent" android:id="@+id/ability"
			android:gravity="center_vertical" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_margin="3dip" />
		<ImageView android:src="@drawable/divider" android:id="@+id/imageView3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_gravity="center" />

		<TextView android:text="They certainly are" style="@style/text"
			android:layout_width="fill_parent" android:id="@+id/flavor"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:layout_margin="3dip" />
		<ImageView android:src="@drawable/divider" android:id="@+id/imageView4"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_gravity="center" />

		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView android:layout_height="wrap_content" android:text="Rebecca Guay"
				style="@style/text" android:id="@+id/artist" android:layout_weight="1"
				android:layout_width="fill_parent" android:layout_gravity="center"
				android:layout_margin="3dip" />
			<TextView android:layout_height="wrap_content" android:text="*/1+*"
				android:gravity="right" style="@style/text" android:id="@+id/pt"
				android:layout_width="wrap_content" android:layout_margin="3dip" />
		</LinearLayout>
		<Button android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/transformbutton"
			android:text="@string/transform" android:textSize="22dip" />
	</LinearLayout>
</ScrollView>