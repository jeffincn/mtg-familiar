<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nplayer_col"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" android:paddingBottom="0dp" android:paddingLeft="5px" android:paddingRight="5px" android:paddingTop="5px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/player_name"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal"
            android:text="Player 1" />

        <LinearLayout
            android:id="@+id/middle_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/player_readout"
                style="@style/text"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="20"
                android:textSize="72dp" android:width="144dp"/>

            <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/textview_backdrop"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/player_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1px"/>
            </LinearLayout>
        </LinearLayout>

        <!--
        android:layout_marginBottom="-10dp"
        android:layout_marginRight="-5dp"
        -->

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5px" android:layout_marginRight="-5dp" android:layout_marginLeft="-5dp">

            <Button
                android:id="@+id/player_plus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+5"
                android:textSize="20sp" android:layout_marginBottom="-10px"/>

            <Button
                android:id="@+id/player_plus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+1"
                android:textSize="20sp" android:layout_marginBottom="-10px"/>

            <Button
                android:id="@+id/player_minus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-1"
                android:textSize="20sp" android:layout_marginBottom="-10px"/>

            <Button
                android:id="@+id/player_minus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-5"
                android:textSize="20sp" android:layout_marginBottom="-10px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>