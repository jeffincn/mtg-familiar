<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:background="@xml/textview_backdrop"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/edh_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edh_minus_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/life_counter_minus_one" />

        <Button
            android:id="@+id/edh_plus_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/life_counter_plus_one" />

    </LinearLayout>

    <ListView
        android:id="@+id/edh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/edh_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:longClickable="false" >

    </ListView>

</RelativeLayout>