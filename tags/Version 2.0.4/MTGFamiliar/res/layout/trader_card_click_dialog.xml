<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" >

        <EditText
            android:id="@+id/traderDialogNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:text="@string/trader_default_number_of" >
        </EditText>

        <TextView
            android:id="@+id/traderDialogBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:gravity="center"
            android:text="@string/trader_edit_dialog_x"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/traderDialogPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:text="@string/trader_default_price" />
    </LinearLayout>

    <Button
        android:id="@+id/traderDialogChangeSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trader_edit_dialog_change_set" />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <Button
        android:id="@+id/traderDialogRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trader_edit_dialog_remove"
        android:layout_weight="1" />
    <Button
        android:id="@+id/traderDialogResetPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trader_edit_dialog_reset_price" 
        android:layout_weight="1"/>
</LinearLayout>
    <Button
        android:id="@+id/traderDialogInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trader_edit_dialog_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/traderDialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_cancel" />

        <Button
            android:id="@+id/traderDialogDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_done" />
    </LinearLayout>

</LinearLayout>