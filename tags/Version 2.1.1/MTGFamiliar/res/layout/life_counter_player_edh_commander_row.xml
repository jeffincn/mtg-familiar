<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edh_player_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/textview_backdrop"
    android:orientation="horizontal"
    android:padding="3dp"
    android:weightSum="1" >





























    <TextView
        android:id="@+id/edh_commander_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="@string/name_search_hint"
        android:textSize="18dp" />




    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#4fa5d5" />






    <TextView
        android:id="@+id/edh_commander_row_damage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/mana_pool_zero"
        android:textSize="18dp" />

</LinearLayout>