<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gelakinetic.mtgfam"
    android:installLocation="auto"
    android:versionCode="10"
    android:versionName="1.7" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name=".MyApp"
        android:allowClearUserData="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/defaultStyle" >
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name"
            /> <!-- android:theme="@style/Theme.HoloEverywhereDark" -->
        <activity
            android:name=".ResultListActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".CardViewActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".DiceActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".ManaPoolActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".RandomCardActivity"
            android:label="@string/app_name"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".NPlayerLifeActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <!-- android:theme="@style/Theme.HoloEverywhereDark" -->
            
            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".RoundTimerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>
        <activity
            android:name=".WidgetSearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            > <!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />
        </activity>

        <activity
			android:name="com.gelakinetic.mtgfam.CardTradingActivity"
			android:label="@string/app_name">
			<!-- android:theme="@style/Theme.HoloEverywhereDark" -->

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ResultListActivity" />

		</activity>

        <service android:name=".RoundTimerService" >
        </service>

        <!-- Provides search suggestions for words and their definitions. -->
        <provider
            android:name=".CardSearchProvider"
            android:authorities="com.gelakinetic.mtgfam.CardSearchProvider" />

        <receiver android:name="com.gelakinetic.mtgfam.MTGFamiliarAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/mtgfamiliar_appwidget_info" />
        </receiver>
    </application>

</manifest>