<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<!-- Roll output -->
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="horizontal" android:layout_height="wrap_content">
			<View android:layout_width="0dp" android:layout_height="fill_parent"
				android:layout_weight="1" />
			<TextView android:id="@+id/die_output" android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="8"
				android:gravity="center" android:background="@drawable/textview_backdrop"
				android:textSize="70sp" android:text="100" />
			<View android:layout_width="0dp" android:layout_height="fill_parent"
				android:layout_weight="1" />
		</LinearLayout>
		<!-- First die row -->
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="horizontal" android:gravity="center"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/d2" android:layout_height="wrap_content"
				android:src="@drawable/d2" android:layout_weight="1"
				android:layout_width="0dp" />

			<ImageView android:id="@+id/d4" android:layout_height="wrap_content"
				android:src="@drawable/d4" android:layout_weight="1"
				android:layout_width="0dp" />
			<ImageView android:id="@+id/d6" android:layout_height="wrap_content"
				android:src="@drawable/d6" android:layout_weight="1"
				android:layout_width="0dp" />
			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/d8" android:layout_width="0dp"
				android:layout_weight="1" android:id="@+id/d8" />
		</LinearLayout>
		<!-- Second die row -->
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="horizontal" android:gravity="center"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/d10" android:layout_height="wrap_content"
				android:src="@drawable/d10" android:layout_weight="1"
				android:layout_width="0dp" />
			<ImageView android:id="@+id/d12" android:layout_height="wrap_content"
				android:src="@drawable/d12" android:layout_weight="1"
				android:layout_width="0dp" />
			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/d20" android:layout_width="0dp"
				android:layout_weight="1" android:id="@+id/d20" />
			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/d100" android:layout_width="0dp"
				android:layout_weight="1" android:id="@+id/d100" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
