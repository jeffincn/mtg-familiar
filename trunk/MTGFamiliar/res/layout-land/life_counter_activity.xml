<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal">
	<!-- Player 1 -->
	<LinearLayout android:layout_height="fill_parent"
		android:orientation="horizontal" android:layout_weight="1"
		android:layout_width="0dp" android:layout_marginLeft="5sp"
		android:layout_marginTop="5sp" android:layout_marginBottom="5sp">
		<!-- History -->
		<LinearLayout android:layout_height="fill_parent"
			android:orientation="vertical" android:background="@drawable/textview_backdrop"
			android:layout_weight="1" android:layout_width="0dp">
			<ListView android:id="@+id/p1_history"
				android:layout_height="fill_parent" android:padding="1dp"
				android:layout_width="fill_parent" />
		</LinearLayout>
		<!-- Health and +/- buttons -->
		<LinearLayout android:layout_height="fill_parent"
			android:orientation="vertical" android:paddingLeft="2dp"
			android:layout_weight="1" android:layout_width="0dp">
			<!-- Health display -->
			<TextView android:id="@+id/p1_readout"
				android:layout_height="wrap_content" android:gravity="center"
				android:textSize="80sp" android:text="20" android:layout_width="match_parent"
				android:layout_marginBottom="25sp" />
			<!-- +1/+5 buttons -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<Button android:id="@+id/p1_plus1" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="+1" android:layout_weight="1"
					android:layout_width="wrap_content" />
				<Button android:id="@+id/p1_plus5" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="+5" android:layout_weight="1"
					android:layout_width="wrap_content" />
			</LinearLayout>
			<!-- -1/-5 buttons -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<Button android:id="@+id/p1_minus1" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="-1" android:layout_width="wrap_content"
					android:layout_weight="1" />
				<Button android:id="@+id/p1_minus5" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="-5" android:layout_width="wrap_content"
					android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<View android:layout_height="fill_parent" android:layout_width="1dp"
		android:background="#FFAAAAAA" />
	<!-- Command bar: reset, poison, etc. -->
	<LinearLayout android:layout_height="match_parent"
		android:id="@+id/linearLayout1" android:orientation="vertical"
		android:layout_width="wrap_content">
		<ImageView android:id="@+id/poison_button"
			android:layout_width="wrap_content" android:src="@drawable/poison_button"
			android:scaleType="center" android:layout_weight="1"
			android:layout_height="0dp" />
		<ImageView android:id="@+id/life_button"
			android:layout_width="wrap_content" android:src="@drawable/life_button"
			android:scaleType="center" android:layout_weight="1"
			android:layout_height="0dp" />
		<ImageView android:id="@+id/die_button"
			android:layout_width="wrap_content" android:src="@drawable/die_button"
			android:scaleType="center" android:layout_weight="1"
			android:layout_height="0dp" />
		<ImageView android:id="@+id/pool_button"
			android:layout_width="wrap_content" android:src="@drawable/pool_button"
			android:scaleType="center" android:layout_weight="1"
			android:layout_height="0dp" />
		<ImageView android:id="@+id/reset_button"
			android:layout_width="wrap_content" android:src="@drawable/reset_button"
			android:scaleType="center" android:layout_weight="1"
			android:layout_height="0dp" />
	</LinearLayout>
	<View android:layout_height="fill_parent" android:layout_width="1dp"
		android:background="#FFAAAAAA" />
	<!-- Player 2 -->
	<LinearLayout android:layout_height="fill_parent"
		android:orientation="horizontal" android:layout_marginRight="5sp"
		android:layout_marginTop="5sp" android:layout_marginBottom="5sp"
		android:layout_weight="1" android:layout_width="0dp">
		<!-- Health and +/- buttons -->
		<LinearLayout android:layout_height="fill_parent"
			android:orientation="vertical" android:paddingRight="2dp"
			android:layout_weight="1" android:layout_width="0dp">
			<!-- Health display -->
			<TextView android:id="@+id/p2_readout"
				android:layout_height="wrap_content" android:gravity="center"
				android:textSize="80sp" android:text="20" android:layout_width="match_parent"
				android:layout_marginBottom="25sp" />
			<!-- +1/+5 buttons -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<Button android:id="@+id/p2_plus1" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="+1" android:layout_weight="1"
					android:layout_width="wrap_content" />
				<Button android:id="@+id/p2_plus5" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="+5" android:layout_weight="1"
					android:layout_width="wrap_content" />
			</LinearLayout>
			<!-- -1/-5 buttons -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<Button android:id="@+id/p2_minus1" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="-1" android:layout_width="wrap_content"
					android:layout_weight="1" />
				<Button android:id="@+id/p2_minus5" android:layout_height="fill_parent"
					android:textSize="20sp" android:text="-5" android:layout_width="wrap_content"
					android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>
		<!-- History -->
		<LinearLayout android:layout_height="fill_parent"
			android:orientation="vertical" android:background="@drawable/textview_backdrop"
			android:layout_weight="1" android:layout_width="0dp">
			<ListView android:id="@+id/p2_history"
				android:layout_height="fill_parent" android:padding="1dp"
				android:layout_width="fill_parent" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
