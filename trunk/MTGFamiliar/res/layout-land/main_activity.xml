<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- fake actionbar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon"
            android:scaleType="fitCenter"
            android:padding="4dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22dip" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="12dp"
        android:background="#33B5E5"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cardsearch"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/card_search_icon"
                    android:gravity="center"
                    android:text="@string/cardsearch"
                    android:textSize="30dip" />

                <TextView
                    android:id="@+id/Nplayerlifecounter"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/life_counter_icon"
                    android:gravity="center"
                    android:text="@string/lifecounter"
                    android:textSize="30dip" >
                </TextView>

                <TextView
                    android:id="@+id/manapool"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/mana_pool_icon"
                    android:gravity="center"
                    android:text="@string/manapool"
                    android:textSize="30dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/rng"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/dice_icon"
                    android:gravity="center_horizontal"
                    android:text="@string/random"
                    android:textSize="30dip" />

                <TextView
                    android:id="@+id/trade"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trade_icon"
                    android:gravity="center_horizontal"
                    android:text="@string/Trade"
                    android:textSize="30dip" />

                <TextView
                    android:id="@+id/roundTimer"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/round_timer_icon"
                    android:gravity="center"
                    android:text="@string/roundtimer"
                    android:textSize="30dip" />

                <TextView
                    android:id="@+id/randomCard"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/mojhosto_icon"
                    android:gravity="center"
                    android:text="@string/mojhosto_label"
                    android:textSize="30dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
