<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">

	    <HorizontalScrollView
	        android:id="@+id/playerScrollView"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
	
	        <LinearLayout
		        android:id="@+id/playerList"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent" 
	            android:orientation="horizontal" >
	            
	        </LinearLayout>
	
	    </HorizontalScrollView>
	    
	    <LinearLayout
	        android:id="@+id/life_counter_timer_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#000000"
	        android:gravity="center"
	        android:orientation="vertical">
	        
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="1dp"
		        android:background="#FFAAAAAA" />
		    
		    <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="#000000"
			    android:gravity="center">
			    
			    <TextView
			        style="@style/text"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:gravity="right"
			    	android:layout_weight="1"
			    	android:textSize="18dp"
			    	android:text="@string/life_counter_round_end"
			    	android:padding="2dp" />
			    	
			    <TextView
			        style="@style/text"
			        android:id="@+id/life_counter_timer_display"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:gravity="left"
			    	android:layout_weight="1"
			    	android:textSize="18dp"
			    	android:text="@string/timer_default_time"
			    	android:padding="2dp" />
			    
			</LinearLayout>
	    
	    </LinearLayout>
	    
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="#FFAAAAAA" />

    <!-- Command bar: reset, poison, etc. -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:background="#000000"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/poison_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:padding="15dp"
            android:src="@drawable/poison_button" />

        <ImageView
            android:id="@+id/life_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:padding="15dp"
            android:src="@drawable/life_button" />

        <ImageView
            android:id="@+id/die_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:padding="15dp"
            android:src="@xml/die_button_xml" />

        <ImageView
            android:id="@+id/pool_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:padding="15dp"
            android:src="@xml/pool_button_xml" />

        <ImageView
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:padding="15dp"
            android:src="@xml/reset_button_xml" />
        
    </LinearLayout>

</LinearLayout>
