<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip" >

    <TextView
        android:id="@+id/player_name"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Player 1" android:gravity="center" android:layout_weight="0"/>

    <!-- Health and +/- buttons -->


    <!-- +1/+5 buttons -->


    <!-- -1/-5 buttons -->


    <!-- Health display -->

    <LinearLayout
        android:orientation="horizontal"
         android:layout_weight="1" android:layout_height="fill_parent" android:weightSum="1" android:layout_width="fill_parent">

        <TextView
            android:id="@+id/player_readout"
            style="@style/text"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="20"
            android:textSize="72dp"
            android:layout_width="0dp" android:maxLines="1" android:layout_weight=".5"/>

        <!-- History -->

<!-- android:layout_width="140dp"
            android:layout_height="214dp"-->
            
        <LinearLayout
            android:layout_height="fill_parent"
            android:background="@drawable/textview_backdrop"
            android:orientation="horizontal" android:layout_width="0dp" android:layout_weight=".5">

            <ListView
                android:id="@+id/player_history"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="1dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp" android:layout_weight="0">
        <Button android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/player_plus5" android:text="+5" android:textSize="20sp"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/player_plus1" android:text="+1" android:textSize="20sp"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/player_minus1" android:text="-1" android:textSize="20sp"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/player_minus5" android:text="-5" android:textSize="20sp"></Button>
    </LinearLayout>

</LinearLayout>