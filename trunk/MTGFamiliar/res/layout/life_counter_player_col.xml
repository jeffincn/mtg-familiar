<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nplayer_col"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/player_name"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="Player 1" android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" android:layout_weight="1">

        <TextView
            android:id="@+id/player_readout"
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="20"
            android:textSize="72dp" android:maxLines="1" android:minWidth="135dp"/>

        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:background="@drawable/textview_backdrop"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/player_history"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="1px" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:paddingTop="5dp" android:layout_marginRight="-5dp" android:layout_weight="0" android:layout_marginBottom="-10dp">
        <Button android:text="+5" android:textSize="20sp" android:layout_weight="1" android:id="@+id/player_plus5" android:layout_width="0dp" android:layout_height="wrap_content"></Button>

        <Button
            android:id="@+id/player_plus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/player_minus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/player_minus5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-5"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>